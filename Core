                                mobsShoutsChance = goblinsShoutsChance;
                                mobName = "Гоблин";
                                break;
                            case > 20 and <= 40:
                                mobDamage = spiderDamage;
                                mobattackspeed = spiderattackspeed;
                                mobHealth = spiderHealth;
                                mobHealthSaved = spiderHealthSaved;
                                mobsShouts = spidersShouts;
                                mobsShoutsChance = spidersShoutsChance;
                                mobName = "Паук";
                                break;

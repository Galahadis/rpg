                        Console.WriteLine("Я думал ты настроен серьезно, " + heroName + ". Надеюсь, ты справишься. Приготовься.");
                        meetCreep = meetrnd.Next(10, 30);
                        meetGold = meetrnd.Next(40, 60);
                        gameLength = meetrnd.Next(10, 30);
                        goldBonus = 5;
                        diff = "Прогулка";
